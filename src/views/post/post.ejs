<% title='Ver Post' %>
  <%- include('../base/estructura-head.ejs'); %>
  <div class="container">
    <div class="card">
      <h1>Post # <%= post.id %>
      </h1>
      <p>
        <%= post.titulo %>
      </p>
      <p class="text-break">
        <%= post.contenido %>
      </p>
      <img src="<%= post.imagen %>" alt="<%= post.titulo %>">
      <p>
        <%= post.createdAt %>
      </p>
      <p><a href="/post">Volver</a></p>
    </div>
  </div>
    <%- include('../base/estructura-foot.ejs'); %>