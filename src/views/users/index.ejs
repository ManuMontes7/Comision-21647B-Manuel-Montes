<% title='Tabla de usuarios' %>
  <%- include('../base/estructura-head.ejs'); %>
  <div class="container">
    <h1 class="text-center">Tabla usuarios</h1>
    <button class="btn btn-outline-primary"><a href="/user/create">Crear usuario</a></button>
    <div class="table-responsive">
    <table class="table table-striped table-bordered" border="1">
      <caption></caption>
      <thead class="thead-dark">
        <tr class="text-center">
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Email</th>
          <th colspan="3" scope="col" class="table-secondary">Opciones</th>
        </tr>
      </thead>
      <tbody>
        <% for (user of users ) { %>
          <tr>
            <td>
              <%= user.firstName %>
            </td>
            <td>
              <%= user.lastName %>
            </td>
            <td type="email">
              <%= user.email %>
            </td>
            <td>
              <a href="/user/<%= user.id %>">Ver Usuario</a>
            </td>
            <td>
              <a href="/user/update/<%= user.id %>">Modificar</a>
            </td>
            <td>
              <a href="/user/delete/<%= user.id %>">Eliminar</a>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
    </div>
  </div>
    <%- include('../base/estructura-foot.ejs'); %>