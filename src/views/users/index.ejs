<% title='Tabla de usuarios' %>
  <%- include('../base/estructura-head.ejs'); %>
    <h1>Tabla usuarios</h1>
    <button><a href="/user/create">Crear usuario</a></button>
    <table class="table" border="1">
      <caption></caption>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Email</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>
      <tbody>
        <% for (user of users ) { %>
          <tr>
            <td>
              <%= user.firstName %>
            </td>
            <td>
              <%= user.lastName %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <a href="/user/<%= user.id %>">Ver Usuario</a>
            </td>
            <td>
              <a href="/user/update/<%= user.id %>">Modificar</a>
            </td>
            <td>
              <a href="/user/delete/<%= user.id %>">Eliminar</a>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
    <%- include('../base/estructura-foot.ejs'); %>